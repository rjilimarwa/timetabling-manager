{% extends 'base.html.twig' %}

{% block  breadcrumb %}
    <li class="active">
        <a href="{{ path('subjects_homepage') }}"><i class="fa fa-fw fa-bars"></i> Matières</a>
    </li>
{% endblock %}

{% block content %}
    <div class="pull-right">
        <a href="{{ path('subjects_create') }}" class="btn btn-primary"><span class="fa fa-plus" aria-hidden="true"></span>Créer</a>
    </div>
    <h1 class="page-header">Matières</h1>
    {% if subjects|length > 0 %}
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                <tr>
                    <th>Intitilé</th>
                </tr>
                </thead>
                <tbody>
                {% for subject in subjects %}
                    <tr>
                        <td>{{ subject.name }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info">Aucune matière</div>
    {% endif %}
{% endblock %}